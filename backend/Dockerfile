# Use Node.js 18 as base image
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install --omit=dev

# Copy source code
COPY . .

# Expose port expected by Cloud Run (informational)
EXPOSE 8080

# Start the app (production)
CMD ["npm", "start"]